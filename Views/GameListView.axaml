<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ATC4_HQ.ViewModels"
             x:Class="ATC4_HQ.Views.GameListView"
             x:DataType="vm:GameListViewModel">
    
    <Grid>
        <TextBlock Text="选择游戏" FontSize="20" FontWeight="Bold" Margin="10,10,10,5" HorizontalAlignment="Left"/>
        <ListBox Name="GameListBox" ItemsSource="{Binding AllGames}" SelectedItem="{Binding SelectedGame}" DoubleTapped="GameListBox_DoubleTapped" Margin="10,40,10,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" FontSize="16" Margin="10"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>          
    </Grid>
</UserControl>
