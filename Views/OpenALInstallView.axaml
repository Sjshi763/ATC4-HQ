<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="500"
             d:DesignHeight="300"
             x:Class="ATC4_HQ.Views.OpenALInstallView">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0"
                   Text="OPENAL 安装"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- 说明文字 -->
        <TextBlock Grid.Row="1"
                   Text="检测到系统未安装 OPENAL 库，这是运行游戏所必需的组件。"
                   FontSize="16"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- 手动安装说明 -->
        <StackPanel Grid.Row="2"
                    Margin="0,20,0,20">
            <TextBlock Text="手动安装：" 
                       FontSize="16" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,10"/>
            <TextBlock Text="1. 访问 OPENAL 官方网站下载安装包" 
                       FontSize="14" 
                       Margin="0,0,0,5"/>
            <TextBlock Text="2. 运行安装程序完成安装" 
                       FontSize="14" 
                       Margin="0,0,0,5"/>
            <TextBlock Text="3. 重新启动本程序" 
                       FontSize="14" 
                       Margin="0,0,0,10"/>
            <Button Name="OpenWebsiteButton"
                    Content="手动安装"
                    Width="150"
                    Height="35"
                    FontSize="14"/>
        </StackPanel>

        <!-- 返回按钮 -->
        <Button Grid.Row="3"
                Name="BackButton"
                Content="返回"
                HorizontalAlignment="Center"
                Width="100"
                Height="35"
                FontSize="14"/>
    </Grid>
</UserControl>
