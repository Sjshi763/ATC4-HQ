<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ATC4_HQ.ViewModels;assembly=ATC4-HQ"
             mc:Ignorable="d"
             d:DesignWidth="500"
             d:DesignHeight="300"
             x:Class="ATC4_HQ.Views.OpenALInstallView"
             x:DataType="vm:OpenALInstallViewModel"
             d:DataContext="{d:DesignInstance vm:OpenALInstallViewModel}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0"
                   Text="{Binding Title}"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- 说明文字 -->
        <TextBlock Grid.Row="1"
                   Text="{Binding Description}"
                   FontSize="16"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- 安装状态 -->
        <TextBlock Grid.Row="2"
                   Text="{Binding InstallStatus}"
                   FontSize="14"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"
                   Foreground="Blue"/>

        <!-- 自动安装说明 -->
        <StackPanel Grid.Row="3"
                    Margin="0,20,0,20">
            <TextBlock Text="{Binding InstallInstructions}" 
                       FontSize="16" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,10"/>
            <ItemsControl ItemsSource="{Binding InstallationSteps}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" 
                                   FontSize="14" 
                                   Margin="0,0,0,5"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button Content="{Binding DownloadButtonText}"
                    Command="{Binding DownloadAndInstallCommand}"
                    Width="150"
                    Height="35"
                    FontSize="14"
                    IsEnabled="{Binding !IsInstalling}"/>
        </StackPanel>

        <!-- 测试安装按钮 -->
        <Button Grid.Row="4"
                Content="{Binding TestButtonText}"
                Command="{Binding TestInstallCommand}"
                HorizontalAlignment="Center"
                Width="100"
                Height="35"
                FontSize="14"
                Margin="0,0,0,10"/>

        <!-- 返回按钮 -->
        <Button Grid.Row="5"
                Content="{Binding BackButtonText}"
                Command="{Binding BackCommand}"
                HorizontalAlignment="Center"
                Width="100"
                Height="35"
                FontSize="14"/>
    </Grid>
</UserControl>
