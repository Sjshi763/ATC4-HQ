<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ATC4_HQ.ViewModels"
             x:Class="ATC4_HQ.Views.BtView"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <vm:BtViewModel/>
    </UserControl.DataContext>
    <StackPanel Margin="20" Spacing="12">
        <TextBlock Text="BT下载/上传" FontWeight="Bold" FontSize="18"/>
        <TextBlock Text="选择种子文件："/>
        <TextBox Text="{Binding TorrentFilePath, Mode=TwoWay}" Width="300"/>
        <TextBlock Text="选择下载目录："/>
        <TextBox Text="{Binding DownloadPath, Mode=TwoWay}" Width="300"/>
        <StackPanel Orientation="Horizontal" Spacing="10">
            <Button Content="开始" Command="{Binding StartDownloadCommand}"/>
            <Button Content="停止" Command="{Binding StopDownloadCommand}"/>
        </StackPanel>
        <ProgressBar Minimum="0" Maximum="100" Value="{Binding Progress}" Height="20"/>
        <TextBlock Text="{Binding Status}"/>
    </StackPanel>
</UserControl>
