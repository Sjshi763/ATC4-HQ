<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ATC4_HQ.Views.InstallGameData">
    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" Margin="20">
        <TextBlock Grid.ColumnSpan="2" Text="安装游戏数据页面" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Margin="0,0,0,30"/>

        <Label Grid.Row="1" Content="游戏数据路径:" VerticalAlignment="Center" Margin="5"/>
        <StackPanel Grid.Row="1" Grid.Column="1" Spacing="5" Orientation="Horizontal">
            <TextBox x:Name="WhereIsTheGames" Height="30" Margin="5" Watermark="请输入游戏路径" Width="300"/>
            <Button x:Name="BrowseButton" Content="浏览" Width="80" Height="30" Margin="5" Click="FindFile_Click"/>
        </StackPanel>
        <Button Grid.Row="2" Content="保存" Click="SaveButton_Click" Width="120" Height="40" HorizontalAlignment="Center" Margin="10,0,0,0" />
    </Grid>
</UserControl>