<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ATC4_HQ.Views.InstallGameData">
    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto" Margin="20">
        <!-- 安装游戏数据的界面内容将在这里添加 -->
        <TextBlock Grid.ColumnSpan="2" Text="安装游戏数据页面" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Margin="0,0,0,30"/>
        
        <Label Grid.Row="1" Content="游戏数据路径:" VerticalAlignment="Center" Margin="5"/>
        <StackPanel Grid.Row="1" Grid.Column="1" Spacing="5" Orientation="Horizontal">
            <TextBox Height="30" Margin="5" Watermark="请输入游戏数据路径" Width="300"/>
            <Button Content="浏览" Width="80" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>